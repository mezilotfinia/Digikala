<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:id="@+id/card_favItem_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_favItem_image"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true"
            android:layout_width="130dp"
            android:layout_height="130dp" />

        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            tools:text="شارژر همراه انکر"
            android:id="@+id/txt_favItem_title"
            android:layout_toLeftOf="@id/img_favItem_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="12sp"
            android:layout_below="@id/txt_favItem_title"
            android:layout_marginTop="8dp"
            tools:text="شارژر همراه انکر"
            android:id="@+id/txt_favItem_desc"
            android:layout_toLeftOf="@id/img_favItem_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/view_favItem_line"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:background="@color/gray300"
            android:layout_toLeftOf="@id/img_favItem_image"
            android:layout_below="@id/txt_favItem_desc"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/txt_favitem_delete"
            android:layout_margin="16dp"
            android:text="حذف"
            android:textColor="@color/red"
            android:layout_below="@id/view_favItem_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>