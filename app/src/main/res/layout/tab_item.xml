<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rel_tabItem_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        tools:text="لوازم آرایشی"
        android:layout_alignParentRight="true"
        android:id="@+id/txt_tabItem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_margin="8dp"
        tools:srcCompat="@drawable/ic_arrow_back_24dp"
        android:id="@+id/img_tabItem_image"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <View
        android:background="@color/gray300"
        android:layout_below="@id/img_tabItem_image"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>