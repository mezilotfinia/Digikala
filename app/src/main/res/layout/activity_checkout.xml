<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="match_parent"
    tools:context=".ShippingCart.CheckoutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_checkOut_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            tools:text="مجتبی نکویی عزیز" />

        <TextView
            android:id="@+id/txt_checkOut_doneMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_checkOut_userName"
            android:layout_centerHorizontal="true"
            android:text="خرید با موفقیت انجام شد"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_checkOut_numberTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_checkOut_doneMessage"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:text="شماره تراکنش:" />

        <TextView
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_cat"
            android:textSize="18sp"
            android:text="12536221"
            android:layout_margin="8dp"
            android:layout_below="@id/txt_checkOut_doneMessage"
            android:layout_toLeftOf="@id/txt_checkOut_numberTitle"
            android:id="@+id/txt_checkOut_trancactionCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_checkOut_list"
            android:layout_below="@id/txt_checkOut_trancactionCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>