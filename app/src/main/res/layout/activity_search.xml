<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray200"
    android:orientation="vertical"
    tools:context=".Main.SearchActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/img_search_back"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_arrow_back_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/gray500" />
        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/img_search_mic"
            app:srcCompat="@drawable/ic_mic_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edt_search_search"
            android:textSize="12sp"
            android:hint="جستجو در دیجی کالا ..."
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_search_back"
            android:layout_toRightOf="@id/img_search_mic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="8dp"
        android:id="@+id/rv_search_productList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>